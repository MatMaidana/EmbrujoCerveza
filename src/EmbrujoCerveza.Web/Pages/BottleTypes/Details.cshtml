@page "{id:int}"
@model EmbrujoCerveza.Web.Pages.BottleTypes.DetailsModel
@using System.Linq
@{
    ViewData["Title"] = "Detalle del tipo de botella";
}

<h1 class="mb-3">@Model.BottleType?.DisplayName</h1>
<a asp-page="Index" class="btn btn-link p-0 mb-4">&larr; Volver al listado</a>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title h5">Información general</h2>
                <dl class="row mt-3">
                    <dt class="col-sm-5">Capacidad</dt>
                    <dd class="col-sm-7">@Model.BottleType?.CapacityMl ml</dd>

                    <dt class="col-sm-5">Material</dt>
                    <dd class="col-sm-7">@Model.BottleType?.Material</dd>

                    <dt class="col-sm-5">Descripción</dt>
                    <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(Model.BottleType?.Description) ? Model.BottleType?.Description : "Sin descripción")</dd>

                    <dt class="col-sm-5">Lotes asociados</dt>
                    <dd class="col-sm-7">@Model.BottleType?.Lots.Count</dd>

                    <dt class="col-sm-5">Botellas registradas</dt>
                    <dd class="col-sm-7">@Model.BottleType?.Lots.Sum(lot => lot.BottleCount)</dd>
                </dl>
                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@Model.BottleType?.Id">Editar</a>
                    <a class="btn btn-outline-danger" asp-page="Delete" asp-route-id="@Model.BottleType?.Id">Eliminar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-column flex-md-row gap-2">
        <h2 class="h4 mb-0">Lotes con este envase</h2>
        <a class="btn btn-sm btn-success" asp-page="/BeerLots/Create" asp-route-bottleTypeId="@Model.BottleType?.Id">Registrar lote</a>
    </div>

    @if (Model.BottleType?.Lots.Any() == true)
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Lote</th>
                        <th>Estilo</th>
                        <th>Cantidad</th>
                        <th>Fecha de envasado</th>
                        <th>Notas</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var lot in Model.BottleType.Lots)
                {
                    <tr>
                        <td>#@lot.Id</td>
                        <td>@lot.BeerStyle?.Name</td>
                        <td>@lot.BottleCount</td>
                        <td>@(lot.BottledOn?.ToString("dd/MM/yyyy") ?? "Sin registro")</td>
                        <td>@(!string.IsNullOrWhiteSpace(lot.Notes) ? lot.Notes : "-")</td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm">
                                <a class="btn btn-outline-secondary" asp-page="/BeerLots/Details" asp-route-id="@lot.Id">Detalles</a>
                                <a class="btn btn-outline-primary" asp-page="/BeerLots/Edit" asp-route-id="@lot.Id">Editar</a>
                                <a class="btn btn-outline-danger" asp-page="/BeerLots/Delete" asp-route-id="@lot.Id">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No hay lotes registrados con este tipo de botella todavía.
        </div>
    }
</section>
