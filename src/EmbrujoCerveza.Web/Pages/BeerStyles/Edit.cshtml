@page "{id:int}"
@model EmbrujoCerveza.Web.Pages.BeerStyles.EditModel
@{
    ViewData["Title"] = "Editar estilo";
}

<h1>Editar estilo</h1>
<a asp-page="Index" class="btn btn-link p-0 mb-4">&larr; Volver</a>

<form method="post" enctype="multipart/form-data" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-6">
        <label asp-for="BeerStyle!.Name" class="form-label"></label>
        <input asp-for="BeerStyle!.Name" class="form-control" />
        <span asp-validation-for="BeerStyle!.Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="BeerStyle!.Stock" class="form-label"></label>
        <input asp-for="BeerStyle!.Stock" class="form-control" />
        <span asp-validation-for="BeerStyle!.Stock" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="BeerStyle!.Abv" class="form-label"></label>
        <div class="input-group">
            <input asp-for="BeerStyle!.Abv" class="form-control" />
            <span class="input-group-text">%</span>
        </div>
        <span asp-validation-for="BeerStyle!.Abv" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="BeerStyle!.Ibu" class="form-label"></label>
        <input asp-for="BeerStyle!.Ibu" class="form-control" />
        <span asp-validation-for="BeerStyle!.Ibu" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="BeerStyle!.Description" class="form-label"></label>
        <textarea asp-for="BeerStyle!.Description" rows="4" class="form-control"></textarea>
        <span asp-validation-for="BeerStyle!.Description" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Imagen actual</label>
        @if (!string.IsNullOrEmpty(Model.BeerStyle?.ImageFileName))
        {
            <img src="~/uploads/@Model.BeerStyle.ImageFileName" alt="@Model.BeerStyle.Name" class="img-fluid rounded mb-2" style="max-height: 220px; object-fit: cover;" />
            <div class="form-check">
                <input class="form-check-input" asp-for="RemoveImage" id="removeImageCheck" />
                <label class="form-check-label" for="removeImageCheck">Eliminar imagen actual</label>
            </div>
        }
        else
        {
            <p class="text-muted">Este estilo no tiene imagen cargada.</p>
        }
    </div>

    <div class="col-md-6">
        <label class="form-label" for="editImageUpload">Subir nueva imagen</label>
        <input asp-for="ImageUpload" class="form-control" type="file" accept="image/*" id="editImageUpload" />
        <span class="form-text">Formatos permitidos: JPG, PNG o WEBP. Al subir una nueva imagen se reemplazar√° la actual.</span>
        <span asp-validation-for="ImageUpload" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="~/Pages/Shared/_ValidationScriptsPartial.cshtml" />
}
