@page
@model EmbrujoCerveza.Web.Pages.BeerStyles.CreateModel
@{
    ViewData["Title"] = "Agregar estilo";
}

<h1>Agregar nuevo estilo</h1>
<p class="text-muted">Completa la información del estilo y sube una imagen representativa.</p>

<form method="post" enctype="multipart/form-data" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-6">
        <label asp-for="BeerStyle.Name" class="form-label"></label>
        <input asp-for="BeerStyle.Name" class="form-control" />
        <span asp-validation-for="BeerStyle.Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="BeerStyle.Abv" class="form-label"></label>
        <div class="input-group">
            <input asp-for="BeerStyle.Abv" class="form-control" />
            <span class="input-group-text">%</span>
        </div>
        <span asp-validation-for="BeerStyle.Abv" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="BeerStyle.Ibu" class="form-label"></label>
        <input asp-for="BeerStyle.Ibu" class="form-control" />
        <span asp-validation-for="BeerStyle.Ibu" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="BeerStyle.Description" class="form-label"></label>
        <textarea asp-for="BeerStyle.Description" rows="4" class="form-control"></textarea>
        <span asp-validation-for="BeerStyle.Description" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label class="form-label" for="imageUpload">Imagen del estilo</label>
        <input asp-for="ImageUpload" class="form-control" type="file" accept="image/*" id="imageUpload" />
        <span class="form-text">Formatos sugeridos: JPG, PNG o WEBP. Tamaño máximo recomendado 2 MB.</span>
        <span asp-validation-for="ImageUpload" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="~/Pages/Shared/_ValidationScriptsPartial.cshtml" />
}
