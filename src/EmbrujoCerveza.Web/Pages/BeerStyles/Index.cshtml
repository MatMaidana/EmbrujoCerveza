@page
@model EmbrujoCerveza.Web.Pages.BeerStyles.IndexModel
@{
    ViewData["Title"] = "Estilos de cerveza";
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-column flex-lg-row gap-3">
    <h1 class="mb-0">Estilos de cerveza</h1>
    <a class="btn btn-primary" asp-page="Create">Agregar nuevo estilo</a>
</div>

<form method="get" class="row g-2 align-items-end mb-4">
    <div class="col-sm-8 col-md-6 col-lg-4">
        <label asp-for="Search" class="form-label">Buscar</label>
        <input asp-for="Search" class="form-control" placeholder="Nombre o descripción" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-secondary">Filtrar</button>
    </div>
    <div class="col-auto">
        <a class="btn btn-link" asp-page="Index">Limpiar</a>
    </div>
</form>

@if (!Model.BeerStyle.Any())
{
    <div class="alert alert-warning">
        No se encontraron estilos con los filtros aplicados.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Imagen</th>
                    <th>Nombre</th>
                    <th>ABV (%)</th>
                    <th>IBU</th>
                    <th>Stock</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.BeerStyle)
            {
                <tr>
                    <td style="width: 120px;">
                        @if (!string.IsNullOrEmpty(item.ImageFileName))
                        {
                            <img src="~/uploads/@item.ImageFileName" alt="@item.Name" class="img-thumbnail" style="max-height: 80px; object-fit: cover;" />
                        }
                    </td>
                    <td>
                        <strong>@item.Name</strong><br />
                        <span class="text-muted small">@(!string.IsNullOrWhiteSpace(item.Description) ? item.Description : "Sin descripción")</span>
                    </td>
                    <td>@item.Abv.ToString("0.0")</td>
                    <td>@(item.Ibu?.ToString() ?? "-")</td>
                    <td>@item.Stock</td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm">
                            <a class="btn btn-outline-secondary" asp-page="Details" asp-route-id="@item.Id">Detalles</a>
                            <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-outline-danger" asp-page="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
