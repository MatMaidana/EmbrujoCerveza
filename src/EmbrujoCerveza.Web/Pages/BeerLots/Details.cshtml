@page "{id:int}"
@model EmbrujoCerveza.Web.Pages.BeerLots.DetailsModel
@{
    ViewData["Title"] = "Detalle del lote";
}

<h1 class="mb-3">Lote #@Model.BeerLot?.Id</h1>
<a asp-page="Index" class="btn btn-link p-0 mb-4">&larr; Volver al listado</a>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title h5">Resumen</h2>
                <dl class="row mt-3">
                    <dt class="col-sm-5">Estilo</dt>
                    <dd class="col-sm-7">@Model.BeerLot?.BeerStyle?.Name</dd>

                    <dt class="col-sm-5">Tipo de botella</dt>
                    <dd class="col-sm-7">@Model.BeerLot?.BottleType?.DisplayName</dd>

                    <dt class="col-sm-5">Cantidad de botellas</dt>
                    <dd class="col-sm-7">@Model.BeerLot?.BottleCount</dd>

                    <dt class="col-sm-5">Fecha de envasado</dt>
                    <dd class="col-sm-7">@(Model.BeerLot?.BottledOn?.ToString("dd/MM/yyyy") ?? "Sin registro")</dd>

                    <dt class="col-sm-5">Notas</dt>
                    <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(Model.BeerLot?.Notes) ? Model.BeerLot?.Notes : "-")</dd>
                </dl>
                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@Model.BeerLot?.Id">Editar</a>
                    <a class="btn btn-outline-danger" asp-page="Delete" asp-route-id="@Model.BeerLot?.Id">Eliminar</a>
                    <a class="btn btn-outline-secondary" asp-page="/BeerStyles/Details" asp-route-id="@Model.BeerLot?.BeerStyleId">Ver estilo</a>
                    <a class="btn btn-outline-secondary" asp-page="/BottleTypes/Details" asp-route-id="@Model.BeerLot?.BottleTypeId">Ver tipo de botella</a>
                </div>
            </div>
        </div>
    </div>
</div>
